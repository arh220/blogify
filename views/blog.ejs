<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') %>
        <title>Blog</title>
</head>

<body>
    <%- include('./partials/nav') %>

        <div class="container mt-5 ">
            <h1>
                <%= blog.title %>
            </h1>
            <img src="<%= blog.coverImage %>" alt="Blog Image" height="500px" width="800px" />

            <pre class="mt-3"><%= blog.body %></pre>
        </div>

        <div class="container mt-5 ">
            <img src="<%= blog.createdBy.profile %>" width="50px" height="50px" style="border-radius: 50%;" alt="aaa">
            <%= blog.createdBy.name %>
        </div>

        <div class="container mt-3">
            <h5>Comment(<%= comments.length %>)
            </h5>
            <% if (locals.user) { %>
                <form method="post" action="/blog/comment/<%= blog._id %>">
                    <div class="mb-3">
                        <input type="text" class="form-control" name="content" placeholder="Enter Your comment"
                            height="10px" /><br>
                        <button type="submit" class=" btn btn-sm btn btn-primary">Add</button>
                    </div>
                </form>
                <% } %>
                    <div class="container mt-3">
                        <% comments.forEach(comment=> { %>
                            <div>
                                <img src="<%= comment.createdBy.profile %>" width="30px" height="30px"
                                    style="border-radius: 50%;" alt="aaa">
                                <%= comment.createdBy.name %>
                                    <pre><%= comment.content %></pre>
                            </div>
                            <% }) %>
                    </div>
        </div>


        <%- include('./partials/script') %>
</body>

</html>