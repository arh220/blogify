<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') %>
        <title>homePage</title>
</head>

<body>
    <%- include('./partials/nav') %>


        <div class="container mt-5">
            <div class="row row-cols-5 gap-5">
                <% blogs.forEach((blog)=> { %>
                    <div class="col">
                        <div class="card col" style="width: 18rem;">
                            <img src="<%= blog.coverImage %>" class="card-img-top" height="100%" width="100%"
                                alt="Blog image">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <%= blog.title %>
                                </h5>
                                <a href="/blog/<%= blog._id %>" class="btn btn-primary">View</a>
                            </div>
                        </div>
                    </div>
                    <% }) %>
            </div>
        </div>





        <%- include('./partials/script') %>
</body>

</html>