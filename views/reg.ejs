<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') %>
        <title>homePage</title>
</head>

<body>
    <%- include('./partials/nav') %>
        <center>

            <form class="w-50 mt-5 " method="post" action="/user/reg" enctype="multipart/form-data">

                <h1>REGISTARTION</h1>
                <div class="form-floating mt-5">
                    <input type="text" class="form-control" id="floatingInputname" name="name" placeholder="Name">
                    <label for="floatingname" class="form-label">Name</label>
                </div><br>
                <div class="form-floating">
                    <input type="email" class="form-control" name="email" id="floatingInput"
                        placeholder="name@example.com">
                    <label for="floatingInput">Email address</label>
                </div><br>
                <div class="form-floating">
                    <input type="password" name="password" class="form-control" id="floatingPassword"
                        placeholder="Password">
                    <label for="floatingPassword">Password</label>
                </div><br>
                <div class="form-floating">
                    <input type="number" class="form-control" id="mo" name="mo" placeholder="Mobile">
                    <label for="floatingmo" class="form-label">Mobile</label>
                </div><br>
                <div class="form-floating">
                    <select class="form-select" name="city" aria-label="Floating label select example">
                        <option value=""></option>
                        <option value="Surat">Surat</option>
                        <option value="Ahmedabad">Ahmedabad</option>
                        <option value="Vadodra">Vadodra</option>
                        <option value="Rajkot">Rajkot</option>
                    </select>
                    <label for="floatingSelect">Select your city</label>
                </div><br>
                <div class="mb-3 text-start">
                    <label for="exampleInputgender" class="form-label">Gender</label>&nbsp;&nbsp;&nbsp;
                    <input class="form-check-input" type="radio" name="gender" id="male" value="Male">
                    <label class="form-check-label" for="male">
                        Male
                    </label>

                    <input class="form-check-input" type="radio" name="gender" id="female" value="Female">
                    <label class="form-check-label" for="female">
                        Female
                    </label>
                </div>
                <div class="form-floating">

                    <input type="date" name="dob" class='input-group date form-control' id="exampleInputdob">
                    <label for="floatingdob">Date of Birth</label>
                </div>

                <div class="form-floating mt-4">

                    <input type="file" name="profile" class="form-control" id="image">
                    <label for="exampleInputimage" class="form-label">choose your profile</label>
                </div><br>
                <div class="d-grid">
                    <button type=" submit" class=" d-grid btn btn-primary">Submit</button>
                </div>
                <div class="mt-5 ">
                    <a href="/user/login" class="fw-bold fs-5">Login</a>
                </div>
            </form>

        </center>
        <%- include('./partials/script') %>
</body>

</html>